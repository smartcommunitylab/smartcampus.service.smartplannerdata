<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>eu.trentorise.smartcampus</groupId>
  <artifactId>smartcampus.services.smartplannerdata</artifactId>
  <packaging>bundle</packaging>
  <version>1.0</version>
  
    <parent>
        <groupId>it.sayservice.platform</groupId>
        <artifactId>servicebus-conf</artifactId>
        <version>1.2</version>
    </parent> 
    
    <dependencies>
            <dependency>
            <groupId>org.codehaus.jackson</groupId>
            <artifactId>jackson-mapper-lgpl</artifactId>
            <version>1.8.1</version>
            <type>jar</type>
            <scope>compile</scope>
        </dependency>
    </dependencies>
    
	<build>
		<plugins>
			<plugin>
				<groupId>it.sayservice.platform</groupId>
				<artifactId>compiler-plugin</artifactId>
				<configuration>
					<service>service/smartplannerdata</service>
					<protoInputFile>smartplannerdata.proto</protoInputFile>
                    <protoClass>eu.trentorise.smartcampus.services.smartplannerdata.data.message.Smartplannerdata</protoClass>
				</configuration>
				<executions>
					<execution>
						<phase>generate-sources</phase>
						<goals>
							<goal>ssbuild</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Include-Resource>{maven-resources}</Include-Resource>
                        <Import-Package>*</Import-Package>
                        <Private-Package>!*</Private-Package>
                        <Export-Package>eu.trentorise.smartcampus.services.smartplannerdata.*;version=${project.version}</Export-Package>
                    </instructions>
                </configuration>
            </plugin>
            <plugin>
                <groupId>it.sayservice.platform</groupId>
                <artifactId>sb-compiler-plugin</artifactId>
                <configuration>
                    <services>
                        <service>
                            <serviceClassName>eu.trentorise.smartcampus.services.smartplannerdata.impl.ServiceImpl</serviceClassName>
                            <methods>
                              <method>
                                 <methodName>GetCarParking</methodName>
                                 <defaultParameters>
                                        <parameters>
                                            <parameter>
                                                <key>agencyId</key>
                                                <value>COMUNE DI TRENTO</value>
                                                <type>java.lang.String</type>
                                            </parameter>
                                        </parameters>
                                 </defaultParameters>
                                 <statusParameters>
                                     <delay>#{1000L*10}</delay>
                                     <period>#{1000L*60*60*24*7}</period>
                                     <cacheValidityPeriod>#{1000L*60*60*24*15}</cacheValidityPeriod>
                                     <validityPeriod>#{1000L*60*60*24*30}</validityPeriod>
                                 </statusParameters> 
                               </method>   
                              <method>
                                 <methodName>GetCarSharing</methodName>
                                 <defaultParameters>
                                        <parameters>
                                            <parameter>
                                                <key>agencyId</key>
                                                <value>CAR-SHARING SERVICE</value>
                                                <type>java.lang.String</type>
                                            </parameter>
                                        </parameters>
                                 </defaultParameters>
                                 <statusParameters>
                                     <delay>#{1000L*10}</delay>
                                     <period>#{1000L*60*60*24*7}</period>
                                     <cacheValidityPeriod>#{1000L*60*60*24*15}</cacheValidityPeriod>
                                     <validityPeriod>#{1000L*60*60*24*30}</validityPeriod>
                                 </statusParameters> 
                               </method>   
                              <method>
                                 <methodName>GetBikeSharing</methodName>
                                 <defaultParameters>
                                        <parameters>
                                            <parameter>
                                                <key>agencyId</key>
                                                <value>BIKE-SHARING-SERVICE</value>
                                                <type>java.lang.String</type>
                                            </parameter>
                                        </parameters>
                                 </defaultParameters>
                                 <statusParameters>
                                     <delay>#{1000L*10}</delay>
                                     <period>#{1000L*60*60*24*7}</period>
                                     <cacheValidityPeriod>#{1000L*60*60*24*15}</cacheValidityPeriod>
                                     <validityPeriod>#{1000L*60*60*24*30}</validityPeriod>
                                 </statusParameters> 
                               </method>   
                            </methods>
                        </service>
                    </services>
                </configuration>
                <executions>
                    <execution>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>sbbuild</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
		</plugins>
	</build>
</project>